= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "sign_up_form", novalidate: true}) do |f|
  - if resource.errors.any?
    .error_explanation
      %ul.custom-error
        - resource.errors.full_messages.each do |msg|
          %li.error= msg
  .form-group
    = f.label t(".first_name")
    = f.text_field :first_name, class: "form-control", placeholder: t(".first_name_placeholder"), autofocus: true, required: true
  .form-group
    = f.label t(".last_name")
    = f.text_field :last_name, class: "form-control", placeholder: t(".last_name_placeholder"), required: true
  .form-group
    = f.label t(".date_of_birth")
    = f.text_field :date_of_birth, class: "form-control datetime", placeholder: t(".date_of_birth_placeholder"), required: true
  .form-group
    = f.label t(".email")
    = f.email_field :email, class: "form-control", placeholder: t(".email_placeholder"), required: true
  .form-group
    = f.label t(".password")
    = f.password_field :password, class: "form-control", placeholder: t(".password_placeholder"), required: true, autocomplete: :off
  .form-group
    = f.label t(".password_confirmation")
    = f.password_field :password_confirmation, class: "form-control", placeholder: t(".password_confirmation_placeholder"), required: true, autocomplete: :off

  = f.submit t("common.sign_up"), class: "btn btn-primary"